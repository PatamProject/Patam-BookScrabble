<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookscrabble.client.view.MainWindowController">
    <Label text="Create game lobby:" textFill="#1552c4" underline="true">
        <font>
            <Font name="Guttman Haim-Condensed" size="18.0" />
        </font>
    </Label>

    <Label text="Choose your name:" />
    <TextField fx:id="nameTextField" alignment="CENTER" maxWidth="170.0" promptText="Enter your name" />

    <Label text="Choose port:" />
    <TextField fx:id="portTextField" alignment="CENTER" maxWidth="170.0" promptText="Enter your desired port" />

    <Label text="BookScrabble Server IP:" />
    <TextField fx:id="serverIpTextField" alignment="CENTER" maxWidth="170.0" promptText="Enter server's IP" />

    <Label text="BookScrabble Server port:" />
    <TextField fx:id="serverPortTextField" alignment="CENTER" maxWidth="170.0" promptText="Enter server's port" />

    <Button fx:id="connectButton" onAction="#hostConnectButtonClicked" text="Connect" />
    <Button fx:id="goBackButton" onAction="#buttonToChooseModeClicked" text="Go Back" />
    <TextField fx:id="ipTextField" disable="true" maxHeight="0.0" maxWidth="0.0" minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="0.0" visible="false" />

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
