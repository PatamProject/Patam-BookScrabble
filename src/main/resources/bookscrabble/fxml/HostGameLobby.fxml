<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="bookscrabble.client.view.MainWindowController">
    <top>
        <Label style="-fx-font-size: 18px;" text="You created the game lobby!" BorderPane.alignment="TOP_CENTER">
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin></Label>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 16px;" text="Start the game if 2-4 players are connected.">
                <VBox.margin>
                    <Insets />
                </VBox.margin></Label>
            <Label style="-fx-font-size: 14px;" text="Connected players:" />
            <TextArea fx:id="playersTextArea" editable="false" prefHeight="200" prefWidth="400.0">
                <VBox.margin>
                    <Insets bottom="70.0" left="20.0" right="20.0" />
                </VBox.margin></TextArea>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10">
        <Label fx:id="viewErrorLabel" textFill="red" />
         <Button fx:id="startButton" onAction="#startGameButtonClicked" text="Start" />
         <Button fx:id="goBackButton" onAction="#returnToHostMenu" text="Go Back">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin></Button>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </VBox>
    </bottom>
</BorderPane>