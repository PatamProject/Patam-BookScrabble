<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label alignment="CENTER" style="-fx-font-size: 18px;" text="Welcome to My BookScrabble Server!" BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin></Label>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Write your desired port number:" />
            <TextField fx:id="portTextField" promptText="Enter port number..." />
        </VBox>
    </center>
    <center>
        <VBox alignment="CENTER" spacing="10">
         <Label text="Write your desired port number:" />
         <TextField maxWidth="200.0" prefWidth="200.0" />
            <Label text="Server Messages:" />
            <TextArea fx:id="messageTextArea" editable="false" maxWidth="500.0" prefHeight="200" />
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="90.0" prefWidth="600.0" spacing="10">
            <Button fx:id="startButton" text="Start Server" />
            <Button fx:id="stopButton" disable="true" text="Stop Server" />
        </VBox>
    </bottom>
</BorderPane>