<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.client.view.ViewController">
<Label text="Connect to a host:" textFill="#1552c4" underline="true">
    <font>
        <Font name="Guttman Haim-Condensed" size="18.0" />
    </font>
</Label>

<Label text="Choose your name:" />
<TextField fx:id="nameTextField" alignment="CENTER" promptText="Enter your name" />

<Label text="Host's IP:" />
<TextField fx:id="ipTextField" alignment="CENTER" promptText="Enter host's IP address" />

<Label text="Host's port:" />
<TextField fx:id="portTextField" alignment="CENTER" promptText="Enter host's port" />

<Button fx:id="connectButton" onAction="#guestConnectButtonClicked" text="Connect" />
<Button fx:id="goBackButton" onAction="#goBackButtonClicked" text="Go Back" />

<padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
</padding>
</VBox>