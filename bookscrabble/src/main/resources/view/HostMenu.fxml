<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.client.view.MainWindowController">
    <Label text="Create game lobby:" textFill="#1552c4" underline="true">
        <font>
            <Font name="Guttman Haim-Condensed" size="18.0" />
        </font>
    </Label>

    <Label text="Choose your name:" />
    <TextField fx:id="nameTextField" alignment="CENTER" promptText="Enter your name" />
    <TextField fx:id="ipTextField" disable="true" visible="false" />

    <Label text="Choose port:" />
    <TextField fx:id="portTextField" alignment="CENTER" promptText="Enter your desired port" />

    <Label text="BookScrabble Server IP:" />
    <TextField fx:id="serverIpTextField" alignment="CENTER" promptText="Enter server's IP" />

    <Label text="BookScrabble Server port:" />
    <TextField fx:id="serverPortTextField" alignment="CENTER" promptText="Enter server's port" />

    <Button fx:id="connectButton" onAction="#hostConnectButtonClicked" text="Connect" />
    <Button fx:id="goBackButton" onAction="#goBackButtonClicked" text="Go Back" />

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>