<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.client.view.MainWindowController">
<Label text="Choose mode:" textFill="#1552c4" underline="true">
    <font>
        <Font name="Guttman Haim-Condensed" size="18.0" />
    </font>
</Label>

<Button fx:id="hostButton" onAction="#hostButtonClicked" prefWidth="120.0" styleClass="menu-button" text="Host" />
<Button fx:id="guestButton" onAction="#guestButtonClicked" prefWidth="120.0" styleClass="menu-button" text="Guest" />

<padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
</padding>

    <stylesheets>
        <URL value="@ClientMode.css" />
    </stylesheets>
</VBox>
